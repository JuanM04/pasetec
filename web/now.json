{
  "version": 2,
  "name": "PaseTec",
  "regions": ["pdx1"],
  "builds": [
    {
      "src": "package.json",
      "use": "@now/static-build",
      "config": { "distDir": "build" }
    },
    { "src": "api/*.js", "use": "@now/node" },
    { "src": "api/graphql/index.js", "use": "@now/node" }
  ],
  "routes": [
    { "src": "/api/graphql", "dest": "/api/graphql/index.js" },
    { "src": "/api/(.*)", "dest": "/api/$1.js" },
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/asset-manifest.json", "dest": "/asset-manifest.json" },
    { "src": "/manifest.json", "dest": "/manifest.json" },
    { "src": "/precache-manifest.(.*)", "dest": "/precache-manifest.$1" },
    { "src": "/service-worker.js", "dest": "/service-worker.js" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "env": {
    "SECRET": "@pasetec_secret",
    "PRISMA_ENDPOINT": "@pasetec_prisma_endpoint",
    "PRISMA_SECRET": "@pasetec_prisma_secret"
  }
}
